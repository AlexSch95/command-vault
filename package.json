{
  "name": "command-vault",
  "version": "1.2.0",
  "description": "Eine moderne Electron-App zur Verwaltung von Programmierbefehlen",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "build-win": "electron-builder --win",
    "publish": "electron-builder --publish=always"
  },
  "keywords": [],
  "author": "AlexSch95",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "electron-updater": "^6.1.8",
    "marked": "^16.3.0",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.AlexSch95.command-vault",
    "productName": "Command Vault",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "*.html",
      "*.css",
      "*.js",
      "node_modules/bootstrap/**/*",
      "node_modules/sqlite3/**/*",
      "node_modules/marked/**/*",
      "locales/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Command Vault"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "AlexSch95",
        "repo": "command-vault"
      }
    ]
  }
}
